{
  "manifest_version": 3,
  "name": "Chatworthy (Dev)",
  "version": "0.2.0",
  "description": "Dev-only exporter for ChatGPT chats (Markdown / JSON) with a floating format selector.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "injected.css"
      ],
      "run_at": "document_idle"
    }
  ]
}