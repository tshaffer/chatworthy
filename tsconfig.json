{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["chrome"],
    "lib": ["ES2021", "DOM"]   // DOM is helpful for content/popup code
  },
  "include": ["src/**/*", "scripts/**/*"]
}
